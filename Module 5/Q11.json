Input:
{
    "items": [
        {
            "name": "item1",
            "value": 10
        },
        {
            "name": "item2",
            "value": 20
        }
    ]
}

Output:
{
    "items": [
        {
            "itemName": "item1",
            "itemValue": 10
        },
        {
            "itemName": "item2",
            "itemValue": 20
        }
    ]
}

Transformation Spec:
[
    {
        "operation": "shift",
        "spec": {
            "items": {
                // for each "items" array element
                "*": {
                    // map the "name" field to "itemName"
                    "name": "items[&1].itemName",
                    // map the "value" field to "itemValue"
                    "value": "items[&1].itemValue"
                }
            }
        }
    }
]